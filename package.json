{
  "name": "@phaicom/eslint-config",
  "type": "module",
  "version": "0.10.0",
  "packageManager": "pnpm@10.24.0",
  "description": "Phaicom's config based on @antfu/eslint-config",
  "author": "Reawpai Chunsoi <reawpai.chunsoi@gmail.com> (https://github.com/phaicom)",
  "license": "MIT",
  "homepage": "https://github.com/phaicom/eslint-config",
  "keywords": [
    "eslint-config"
  ],
  "exports": {
    ".": "./dist/index.js"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=22"
  },
  "scripts": {
    "build": "tsup --clean --dts",
    "stub": "tsup",
    "dev": "npx @eslint/config-inspector --config eslint.config.ts",
    "build:inspector": "pnpm run build && npx @eslint/config-inspector build",
    "watch": "tsup --watch",
    "prepack": "pnpm run build",
    "release": "bumpp && pnpm publish --access=public",
    "lint": "eslint . --cache",
    "lint:fix": "eslint . --fix --cache",
    "typecheck": "tsc --noEmit",
    "prepare": "npx simple-git-hooks"
  },
  "peerDependencies": {
    "eslint-plugin-better-tailwindcss": ">=3.7.11"
  },
  "peerDependenciesMeta": {
    "eslint-plugin-better-tailwindcss": {
      "optional": true
    }
  },
  "dependencies": {
    "@antfu/eslint-config": "^6.4.2",
    "eslint": "^9.39.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.2.0",
    "@commitlint/config-conventional": "^20.2.0",
    "bumpp": "^10.3.2",
    "eslint-plugin-better-tailwindcss": "^3.7.11",
    "eslint-plugin-format": "^1.1.0",
    "lint-staged": "^16.2.7",
    "simple-git-hooks": "^2.13.1",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged",
    "commit-msg": "npx commitlint --edit ${1}"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
